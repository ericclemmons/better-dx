{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["//#dev:opencode", "//#dev:turborepo"]
    },
    "//#dev:opencode": {
      "cache": false,
      "persistent": true
    },
    "//#dev:turborepo": {
      "cache": false,
      "persistent": true
    }
  }
}
